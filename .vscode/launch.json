{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
		"version": "0.2.0",
		"configurations": [
			{
				"name": "Attach to Child Process",
				"type": "cppdbg",
				"request": "attach",
				"program": "${workspaceFolder}/minishell",
				"processId": "${command:pickProcess}",
				"MIMode": "gdb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					}
				]
			},
			{
				"name": "Debug Parent Process",
				"type": "cppdbg",
				"request": "launch",
				"program": "${workspaceFolder}/125",
				"args": [],
				"stopAtEntry": false,
				"cwd": "${workspaceFolder}",
				"environment": [],
				"externalConsole": false,
				"MIMode": "gdb", // Utilisez "lldb" si vous êtes sur macOS
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					},
					{
						"description": "Follow child process after fork",
						"text": "set follow-fork-mode child",
						"ignoreFailures": true
					}
				],
				"preLaunchTask": "build", // Optionnel : pour compiler avant de lancer le débogage
				"miDebuggerPath": "/usr/bin/gdb" // Chemin vers gdb ou lldb
			}
		]
	}